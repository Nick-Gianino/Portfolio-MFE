{
  "extends": "ts-config-single-spa",
  "files": ["src/webslate-root-config.ts"],
  "compilerOptions": {
    "declarationDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
